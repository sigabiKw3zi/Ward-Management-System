@model VirtualHealthProject.Models.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Employee</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .container {
            max-width: 800px;
        }

        .btn-back {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Delete Employee</h1>

        <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <hr />

        <div>
            <h4>Employee Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.EmpNo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EmpNo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Surname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Surname)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EmailAddress)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Mobile)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Mobile)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.JoinDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.JoinDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Role)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CreatedById)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedById)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ModifiedById)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ModifiedById)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ModifiedOn)
                </dd>
            </dl>

            <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
                <input type="hidden" asp-for="EmployeeID" />

                <div class="alert alert-warning text-center">
                    <strong>Warning!</strong> This action cannot be undone .
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Delete" class="btn btn-danger"  />
                    <a class="btn btn-secondary btn-back" asp-action="ListOf">Back to List</a>
                </div>
            </form>

            <script>
                function confirmDelete() {
                    return confirm("Are you sure you want to delete this employee? .");
                }
            </script>

        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script> *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>