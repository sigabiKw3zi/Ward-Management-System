@model VirtualHealthProject.Models.PatientVisits

@{
    Layout = "_DoctorLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .container {
            max-width: 800px;
        }

        /* Adjusting the print button to be top-right but further down */
        .btn-print {
            position: absolute;
            top: 50px;
            right: 30px;
            background-color: darkgreen;
            color: white;
            z-index: 999;
        }

        .btn-back {
            margin-right: 10px;
        }

        @@media print {
            /* Hide everything except the details section */
            body * {
                visibility: hidden;
            }

            .container, .container * {
                visibility: visible;
            }

            .container {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
            }
            /* Hide the print button itself in the print view */
            .btn-print {
                display: none;
            }
            /* Hide the Edit and Back buttons when printing */
            .btn-back, .btn-edit {
                display: none;
            }
            /* Hide the Title of the page when printing */
            h1 {
                display: none;
            }
        }

        /* Adjust zoom level for better visibility after print */
        body.zoomed {
            zoom: 1.2; /* Adjust this value for the desired zoom level */
        }
    </style>
</head>
<body>

<div>
    <h4>PatientVisit</h4>
    <hr />
        <!-- Print Button (positioned top-right but further down) -->
        <button onclick="window.print(); setTimeout(resetZoom, 500);" class="btn btn-primary btn-print">
            <i class="bx bxs-printer" style="color:#01acff"></i>
            Print Info
        </button>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VisitsId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
