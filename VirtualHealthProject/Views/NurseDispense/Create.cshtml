@model VirtualHealthProject.Models.NurseDispense

@{
    ViewData["Title"] = "Create";
    Layout = "_NurseLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Add New Dispensed Medication</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Nurse Dispensed Medication</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ScheduledMedication" class="control-label"></label>
                        <input asp-for="ScheduledMedication" class="form-control" aria-label="Scheduled Medication" />
                        <span asp-validation-for="ScheduledMedication" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="PatientName" class="control-label"></label>
                        <input asp-for="PatientName" class="form-control" aria-label="Patient Name" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="DatePrescribed" class="control-label"></label>
                        <input asp-for="DatePrescribed" type="datetime-local" class="form-control" aria-label="Date Prescribed" />
                        <span asp-validation-for="DatePrescribed" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="MedicineName" class="control-label"></label>
                        <input asp-for="MedicineName" class="form-control" aria-label="Medicine Name" />
                        <span asp-validation-for="MedicineName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" aria-label="Quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Dosage" class="control-label"></label>
                        <input asp-for="Dosage" class="form-control" aria-label="Dosage" />
                        <span asp-validation-for="Dosage" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
