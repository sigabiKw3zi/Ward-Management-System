@model VirtualHealthProject.Models.PatientMovementViewModel

@{
    ViewData["Title"] = "Delete Patient Movement";
    Layout = "_WardAdminLayout";
}

<h1>Delete Patient Movement</h1>

<div>
    <h4>PatientMovement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PatientMovementID</dd>

        <dt class="col-sm-2">Patient ID</dt>
        <dd class="col-sm-10">@Model.PatientID</dd>

        <dt class="col-sm-2">Movement</dt>
        <dd class="col-sm-10">@Model.Movement</dd>

        <dt class="col-sm-2">Movement Time</dt>
        <dd class="col-sm-10">@Model.MovementTime</dd>

        <dt class="col-sm-2">Return Time</dt>
        <dd class="col-sm-10">@Model.ReturnTime?.ToString("g")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
    <input type="hidden" asp-for="PatientMovementID" />

    <div class="alert alert-warning text-center">
        <strong>Warning!</strong> This action cannot be undone.
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary btn-back" asp-action="Index">Back to List</a>
    </div>
</form>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this PatientMovement?");
    }
</script>
   

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
