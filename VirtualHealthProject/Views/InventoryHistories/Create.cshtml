@model VirtualHealthProject.Models.InventoryHistory

@{
    ViewData["Title"] = "Create";
    Layout = "_StockManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Create Inventory History</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Inventory History Information</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ConsumableId" class="control-label"></label>
                        <input asp-for="ConsumableId" class="form-control" />
                        <span asp-validation-for="ConsumableId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="MovementType" class="control-label"></label>
                        <input asp-for="MovementType" class="form-control" />
                        <span asp-validation-for="MovementType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="MovementDate" class="control-label"></label>
                        <input asp-for="MovementDate" type="date" class="form-control" />
                        <span asp-validation-for="MovementDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
