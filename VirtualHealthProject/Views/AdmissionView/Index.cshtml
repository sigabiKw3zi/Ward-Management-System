@model IEnumerable<VirtualHealthProject.Models.AdmissionViewModel>

@{
    ViewBag.Title = "Admissions";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Box Heading</title>
    <link rel="stylesheet" href="styles.css">
</head>

<div class="box-heading">
    <h1>@ViewData["Title"]</h1>

</div>


<style>
    .box-heading {
        padding: 10px;
        margin: 20px 0;
        background-color: #f4f4f4;
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    }

        .box-heading h1 {
            margin: 0;
            font-size: 1.5em;
            color: #333;
            text-align: center;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table th {
            background-color: #f4f4f4;
        }

    .summary {
        margin-top: 20px;
        padding: 10px;
        border-top: 2px solid #ddd;
        font-weight: bold;
    }
</style>

<table class="table table-striped">
    <thead>
        <tr>
            <th>PatientID</th>
            <th>Patient Name</th>
            <th>Admission Date</th>
            <th>Admission Status</th>
            @*  <th>Action</th> *@
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var admit in Model)
            {
                <tr>
                    <td>@admit.PatientID</td>
                    <td>@admit.PatientName</td>
                    <td>@admit.AdmissionDate.ToString("g")</td>
                    <td>@admit.Status</td>
                    @* <td>
            <a asp-action="Edit" asp-route-id="@admit.AdmissionId">Edit</a>
            </td> *@
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No data available</td>
            </tr>
        }
    </tbody>
</table>

</html>

