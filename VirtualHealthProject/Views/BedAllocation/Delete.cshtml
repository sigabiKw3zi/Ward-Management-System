@model VirtualHealthProject.Models.BedAllocation
@{
    ViewData["Title"] = "Bed Allocation";
    Layout = "_WardAdminLayout";

}

<h2>Delete Allocation</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this allocation?
</div>

<div>
    <h4>Bed Allocation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Allocation ID</dt>
        <dd class="col-sm-10">@Model.AllocationID</dd>

        <dt class="col-sm-2">Bed ID</dt>
        <dd class="col-sm-10">@Model.BedID</dd>

        <dt class="col-sm-2">Allocated To</dt>
        <dd class="col-sm-10">@Model.Patient.FirstName @Model.Patient.LastName</dd>

        <dt class="col-sm-2">Room Number</dt>
        <dd class="col-sm-10">@Model.RoomNumber</dd>

        <dt class="col-sm-2">Allocation Date</dt>
        <dd class="col-sm-10">@Model.AllocationDate.ToString("d")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AllocationID" />
    <input type="hidden" asp-for="BedID" />
    <input type="hidden" asp-for="PatientID" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

