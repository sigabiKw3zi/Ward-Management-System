@model VirtualHealthProject.Models.Billing

@{
    ViewData["Title"] = "Delete";
    Layout = "_WardAdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete The Nurse Dispensed Medication</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .container {
            max-width: 800px;
        }

        .btn-back {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Delete Billling Information</h1>

        <h3 class="text-danger">Are you sure you want to delete this?</h3>
        <hr />

        <div>
            <h4>Billling Information</h4>
            <hr />
            <dl class="row">

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ScheduledMedication)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ScheduledMedication)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AdmissionDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AdmissionDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DischargeDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DischargeDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BedCharge)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BedCharge)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MedicationCharge)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MedicationCharge)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ServiceCharge)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ServiceCharge)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TotalAmount)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AmountPaid)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AmountPaid)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaymentStatus)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PaymentDate)
                </dd>
            </dl>

            <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
                <input type="hidden" asp-for="BillId" />

                <div class="alert alert-warning text-center">
                    <strong>Warning!</strong> This action cannot be undone.
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary btn-back" asp-action="Index">Back to List</a>
                </div>
            </form>

            <script>
                function confirmDelete() {
                    return confirm("Are you sure you want to delete this billing?");
                }
            </script>

        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
