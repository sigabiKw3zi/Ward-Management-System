@model VirtualHealthProject.Models.WeeklyStockTakes

@{
    ViewData["Title"] = "Create";
    Layout = "_StockManagerLayout";
}

<div class="container mt-4">
    <h1 class="mb-4">Create Weekly Stock Take</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Weekly Stock Take Information</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ManagerName" class="control-label"></label>
                        <input asp-for="ManagerName" class="form-control" />
                        <span asp-validation-for="ManagerName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="DateTime" class="control-label"></label>
                        <input asp-for="DateTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ConsumableName" class="control-label"></label>
                        <input asp-for="ConsumableName" class="form-control" />
                        <span asp-validation-for="ConsumableName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="AvailableStock" class="control-label"></label>
                        <input asp-for="AvailableStock" class="form-control" />
                        <span asp-validation-for="AvailableStock" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="StockNeeded" class="control-label"></label>
                        <input asp-for="StockNeeded" class="form-control" />
                        <span asp-validation-for="StockNeeded" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Comment" class="control-label"></label>
                        <input asp-for="Comment" class="form-control" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}