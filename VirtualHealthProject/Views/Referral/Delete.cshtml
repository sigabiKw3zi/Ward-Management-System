@model VirtualHealthProject.Models.ReferralLetter

@{
    ViewBag.Title = "Delete Referral ";
    Layout = "_WardAdminLayout";
}
<div class="form-container">
    <h2>Delete Referral</h2>

    <div class="patient-info">
       
        <p><strong>Name:</strong> @Model.FirstName</p>
        <p><strong>Surname:</strong> @Model.LastName</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
        <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
        <p><strong>Primary Concern:</strong> @Model.PrimaryConcern</p>
        <p><strong>Current Medication:</strong> @Model.CurrentMedications</p>
        <p><strong>Appointment Date:</strong> @Model.AppointmentDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Appointment Time:</strong> @Model.AppointmentTime.ToString()</p>
    </div>
    <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
        <input type="hidden" asp-for="ReferralID" />

        <div class="alert alert-warning text-center">
            <strong>Warning!</strong> This action cannot be undone.
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn btn-secondary btn-back" asp-action="Index">Back to List</a>
        </div>
    </form>
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this Referral?");
        }
    </script>


    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
