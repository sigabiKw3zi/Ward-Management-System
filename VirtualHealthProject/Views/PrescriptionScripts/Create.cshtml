@model VirtualHealthProject.ViewModels.PrescriptionScriptViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_DoctorLayout";
}

<h1>Create</h1>

<h4>PrescriptionScript</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <h4 class="card-title">Prescription Form</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2">
                    <label asp-for="PatientID" class="control-label">Patient Name</label>
                    <select asp-for="PatientID" class="form-control" asp-items="ViewBag.Patients"></select>
                    <span asp-validation-for="PatientID" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="UserId" class="control-label">Doctor Name</label>
                    <select asp-for="UserId" class="form-control" asp-items="Model.DoctorList" disabled></select>
                    <input type="hidden" asp-for="UserId" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label for="Medication" class="control-label">Select Medication</label>
                    <select id="Medication" name="Medication" class="form-control">
                        <option value="">Select medication</option>
                        <option value="1">Aspirin</option>
                        <option value="2">Ibuprofen</option>
                        <option value="3">Paracetamol</option>
                        <option value="4">Amoxicillin</option>
                        <option value="5">Lisinopril</option>
                        <option value="6">Metformin</option>
                        <option value="7">Simvastatin</option>
                        <option value="8">Omeprazole</option>
                        <option value="9">Sertraline</option>
                        <option value="10">Levothyroxine</option>
                    </select>
                    <span asp-validation-for="Medication" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Dosage" class="control-label">Dosage</label>
                    <input asp-for="Dosage" class="form-control" />
                    <span asp-validation-for="Dosage" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="DateWritten" class="control-label">Date Written</label>
                    <input asp-for="DateWritten" class="form-control" type="date" />
                    <span asp-validation-for="DateWritten" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Status" class="control-label">Status</label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="DateForwardedToPharmacy" class="control-label">Date Forwarded To Pharmacy</label>
                    <input asp-for="DateForwardedToPharmacy" class="form-control" type="date" />
                    <span asp-validation-for="DateForwardedToPharmacy" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="DateDeliveredToWard" class="control-label">Date Delivered To Ward</label>
                    <input asp-for="DateDeliveredToWard" class="form-control" type="date" />
                    <span asp-validation-for="DateDeliveredToWard" class="text-danger"></span>
                </div>

                <div class="form-group d-inline mb-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}